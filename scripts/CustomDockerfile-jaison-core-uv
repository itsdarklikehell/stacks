# Base image
FROM nvidia/cuda:13.0.1-cudnn-devel-ubuntu24.04 AS base

# Update and install dependencies
RUN apt-get update && \
    apt-get install -y libxcb-xfixes0 libxcb-shape0 pipx git wget curl ca-certificates python3 python3-venv ffmpeg git bzip2 && \
    apt --fix-broken install -y && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*


# Download the latest uv
ADD https://astral.sh/uv/install.sh /uv-installer.sh
# Run the installer then remove it
RUN sh /uv-installer.sh && rm /uv-installer.sh
# Ensure the installed binary is on the `PATH`
ENV PATH="/root/.local/bin/:$PATH"


# Copy data
COPY . /jaison-core
WORKDIR /jaison-core

# Create .venv
ENV PATH=".venv/bin:$PATH"
RUN uv venv .venv --seed

# Install requirements
RUN uv pip install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu128 && \
    uv pip install --upgrade pip && \
    uv pip install -r requirements.txt && \
    uv pip install --no-deps -r requirements.no_deps.txt && \
    uv spacy download en_core_web_sm && \
    uv install.py && \
    uv unidic download

WORKDIR /jaison-core/src

# RUN uv run main.py --help

# Expose port 7272 (the new default port)
EXPOSE 7272

# The code to run when container is started:
# ENTRYPOINT ["uv", "run", "./src/main.py --config=example"]
CMD ["uv", "run", "main.py --config=example"]
