# Base image
FROM nvidia/cuda:13.0.1-cudnn-devel-ubuntu24.04 AS base

FROM python:3.12-slim-trixie AS compiler
ENV PYTHONUNBUFFERED=1

# The installer requires curl (and certificates) to download the release archive
RUN apt-get update && apt-get install -y --no-install-recommends curl ca-certificates ffmpeg

# Ensure the installed binary is on the `PATH`
ENV PATH="/root/.local/bin/:$PATH"
ENV VIRTUAL_ENV jaison-core

# Copy data
COPY . /jaison-core
WORKDIR /jaison-core

# Create venv
RUN python -m venv .venv
ENV PATH=".venv/bin:$PATH"




# Make RUN commands use the new environment:
SHELL ["conda", "run", "-n", "jaison-core", "/bin/bash", "-c"]
RUN pip install uv

# Install requirements
RUN pip install --upgrade pip
RUN pip install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu128
RUN pip install --no-deps -r requirements.no_deps.txt
RUN pip install -r requirements.txt
RUN python3 -m spacy download en_core_web_sm
RUN python3 install.py
RUN python3 -m unidic download

# Expose port 7272 (the new default port)
EXPOSE 7272

CMD ["python3", "./src/main.py --help"]
