# Base image
FROM nvidia/cuda:13.0.1-cudnn-devel-ubuntu24.04 AS base

# Update and install dependencies
RUN apt-get update && \
    apt-get install -y libxcb-xfixes0 libxcb-shape0 pipx git wget curl ca-certificates python3 python3-venv ffmpeg git bzip2 && \
    apt --fix-broken install -y && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*


# Copy data
COPY . /jaison-core
WORKDIR /jaison-core



# Create .venv
ENV PATH=".venv/bin:$PATH"
RUN python3 -m venv .venv

# Install requirements
RUN pip install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu128 && \
    pip install -r requirements.txt && \
    pip install --no-deps -r requirements.no_deps.txt

RUN python3 -m spacy download en_core_web_sm  && \
    python3 install.py && \
    python3 -m unidic download

WORKDIR /jaison-core/src

# RUN uv run main.py --help

# Expose port 7272 (the new default port)
EXPOSE 7272

# The code to run when container is started:
# ENTRYPOINT ["python3", "./src/main.py --config=example"]
CMD ["python3", "main.py --config=example"]
