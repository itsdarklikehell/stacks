
# Example .env file for ai-stack
# Copy this file to .env and fill in values as needed
# All variables referenced in compose.yaml, grouped by service

# GLOBAL/COMMON
STACK_VERSION=1.0.0
HOST_UID=1000
HOST_GID=1000

# AUTOHEAL
autoheal.container_name=autoheal-management
autoheal.hostname=autoheal-management
autoheal.environment.AUTOHEAL_CONTAINER_LABEL=keep_healthy
autoheal.container_network_mode=none
autoheal.network_mode=none
autoheal_container_restart=always

# basic-memory
basic-memory.container_name=basic-memory-server
basic-memory.restart=unless-stopped
basic_memory_restart=unless-stopped
basic_memory_hostname=basic-memory

# faster-whisper-gpu
faster_whisper_container_name=faster-whisper-gpu
faster_whisper_restart=unless-stopped
faster_whisper_hostname=faster-whisper-gpu
PUID=1000
PGID=1000

# homeassistant
homeassistant_container_name=homeassistant
homeassistant_restart=unless-stopped
homeassistant_hostname=homeassistant
HASSPORT=8123

# letta-db
letta_db_container_name=letta-db
letta_db_hostname=letta-db
LETTA_PG_USER=letta
LETTA_PG_PASSWORD=letta
LETTA_PG_DB=letta
LETTA_PG_PORT=5432

# letta-mcp
letta_mcp_container_name=letta-mcp
letta_mcp_hostname=letta-mcp
letta_mcp_restart=unless-stopped
LETTA_MCP_PORT=3001
LETTA_BASE_URL=http://host.docker.internal:8283
LETTA_PASSWORD=
NODE_ENV=production

# letta-server
letta_server_container_name=letta-server
letta_server_restart=unless-stopped
letta_server_hostname=letta-server
LETTA_SERVER_IMAGE=letta/letta:latest

# Add more variables as needed for other services
