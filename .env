# WD="$(dirname "$(realpath "$0")")" || true

# # set working dir
# export WD

# # set base path
# export STACK_BASEPATH="${WD}"

# set letta sandbox mount point
export LETTA_SANDBOX_MOUNT_PATH="${STACK_BASEPATH}/DATA/ai-stack/letta/sandbox"

# set uv link mode
UV_LINK_MODE=copy

# local, docker
OLLAMA=docker

# folder that store secrets
export SECRETS_DIR="${STACK_BASEPATH}/SECRETS"

# folders that store stack data
export PERM_DATA="${STACK_BASEPATH}/DATA"

# folders that store stack configs
export CONFIGS_DIR="${STACK_BASEPATH}/STACKS"

# false, true
CLEANUP=false

# false, true/normal, all
PRUNE=false

# false, true, force_rebuild
BUILDING=normal

# false, true
PULL_MODELS=true

# false, true
START_OLLMVT=true

# false, true
START_COMFYUI=true

# false, true
START_CUSHYSTUDIO=true

# false, true
START_BROWSER=true

# set twitch client id
TWITCH_CLIENT_ID=your_client_id

# set twitch client secret
TWITCH_CLIENT_SECRET=your_client_secret

# get machine IP address
IP_ADDRESS="$(hostname -I | awk '{print ${1}')"

DOCKER_BASEPATH=/media/hans/4-T/docker
